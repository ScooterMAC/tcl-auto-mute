<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="12dp">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Select Roku TV" android:textSize="18sp"/>

    <ListView android:id="@+id/deviceList" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:id="@+id/refreshBtn" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Refresh"/>
        <Button android:id="@+id/manualBtn" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Manual IP"/>
    </LinearLayout>
</LinearLayout>
